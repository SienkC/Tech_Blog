<section class="box p-1 m-6 custom-box">
    {{!-- links to post page --}}
    <a href="/post/{{id}}">
        <header class="level is-mobile">
            <h1 class="level-item has-text-centered title custom-text">{{title}}</h1>
            <p class="level-item has-text-centered">
                {{!-- username grabbed from parent user --}}
                By: {{user.username}}
            </p>
        </header>
        <p class="p-5 custom-inner container is-fullhd">{{text}}</p>
    </a>
</section>